
@import '/static/iconfont/iconfont.wxss';

.loading{
  height:300rpx;
  width: 400rpx;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}

.book .menu{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  display:flex;
  justify-content: space-between;
  border-top:1px solid #f1f1f1;
  line-height:100rpx;
  height:100rpx;
  background: #fff;
  z-index: 998;
}

.menu .iconfont{
  flex:1;
  text-align: center;
  font-size:20px;
}

.menu .iconfont:active{
  background: #f1f1f1;
}

.catalog-menu{
  position:fixed;
  left:0;
  top:0;
  bottom:0;
  padding-bottom:100rpx;
  background: #fff;
  border:1px solid #f1f1f1;
  z-index: 996;
  width:680rpx;
  transform: translate3d(-100%,0,0);
  transition: transform .3s ease;
}

.active{
  transform:translate3d(0,0,0);
}

.catalog-menu .catalog-item{
  font-size:14px;
  color: #333;
  line-height: 70rpx;
  height:70rpx;
  padding-left:20rpx;
}

.catalog-menu .catalog-item:active{
  background: #f1f1f1;
}

.mask{
  position:fixed;
  top:0;
  right:0;
  left: 0;
  bottom:0;
  z-index: 888;
  background:rgba(0,0,0,.2);
}

.book-content{
  padding-bottom:100rpx;
  padding: 0 20rpx;
}
