/* pages/book/details.wxss */
.details .book-details{
  padding:20rpx 20rpx 40rpx 20rpx;
  border-bottom:8rpx solid #e9e9e9;
}

.book-t{
  display:flex;
  font-size:12px;
  color:#444;
}

.book-t .img{
  width:220rpx;
  height:280rpx;
  box-shadow: 0 0 10px #000;
}

.book-t .main-msg{
  margin-left:40rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}

.book-t .title{
  font-size:14px;
  font-weight:700;
}

.book-b{
  display:flex;
  justify-content:space-between;
  margin-top:50rpx;
}

.book-b .btn{
  color:#333;
  margin:0;
  width:320rpx;
  font-size:12px;
  background: #e9e9e9;
  border:1px solid #e9e9e9;
}

/* 简介部分 */
.book-desc{
  padding:30rpx 20rpx;
  border-bottom:2px solid #e9e9e9;
  font-size:12px;
  line-height:1.5;
}

.book-desc .title{
  font-weight:700;
  font-size:15px;
}

.book-desc .desc-main{
  margin-top:50rpx;
  font-size:12px;
  color:#333;
}

/* 查看目录 */
.book-catalog{
  padding:0 20rpx;
  line-height:100rpx;
  height:100rpx;
  display:flex;
  justify-content:space-between;
  border-bottom:2px solid #e9e9e9;
}

.book-catalog .show-catalog{
  font-weight:700;
  font-size:15px;
}

.book-catalog .catalog-l{
  width:300rpx;
  display:flex;
  justify-content: space-between;
}

.book-catalog .catalog-l .title{
  font-size:15px;
  font-weight:700;
  color:#333;
}

.catalogs{
  font-size:12px;
  color:#444;
}

.update-time{
  font-size:10px;
  color:#444;
}

.read-btn-wrap{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding:20rpx;
  box-shadow:0 0 2px #e9e9e9  
}

.read-btn-wrap .b-btn{
  background-color: #4096ff;
  color:#fff;
  font-size:16px;
}

.loading{
  height:300rpx;
  width: 400rpx;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}

.desc-lv {
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
   overflow:hidden;
}

.button-hover{
  background-color: #4096ff;    
}