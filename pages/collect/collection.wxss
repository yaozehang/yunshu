/* pages/collect/collection.wxss */
.container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-top:20rpx
}

.container .collect-img{
  width: 230rpx;
  height:300rpx;
  box-shadow: 0 0 10px #000;
}

.collect-book{
  display:flex;
  flex-direction:column;
  justify-content: space-between;
  width:300rpx;
  height:350rpx;
  align-items: center;
  margin-bottom: 20rpx;
  padding-top:5rpx;
  position:relative;
}

.collect-title{
  font-size:14px;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
  overflow:hidden;
}


.loading{
  height:300rpx;
  width: 400rpx;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}

.loading-more {
  display:flex;
  justify-content:center;
  align-items: center;
  height: 160rpx;
}

.loading-more .loadmore-img{
  width:100rpx;
  height:100rpx;
}

.loading-more text{
  margin-left:20rpx;
}

.no-more{
  position:relative;
  display:flex;
  align-items:center;
  justify-content:center;
  text-align: center;
  height:60rpx;
  margin-top:40rpx;
  color:#888;
}

.no-more-text{
  position:relative;
  z-index:998;
  width:300rpx;
  background: #fff
}

.line{
  z-index:996;  
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  width:600rpx;
  height:1rpx;
  background:#e9e9e9;
}

.collect-delete .img{
  width:50rpx;
  height:50rpx;
  z-index:998;
  position:absolute;
  top:-25rpx;
  right:0;
}

