/**index.wxss**/

.index .slide-image{
  width:710rpx;
  height:350rpx;
}

.content-item{
  margin-top:40rpx;
}

.content-item .title{
  font-size:16px;
  padding-left: 20rpx ;
  border-left:2px solid #000;
  height:32rpx;
  line-height:32rpx;
  font-weight: bold;
}

.content-item .content{
  margin-top:40rpx;
  display:flex;
  justify-content:space-between;
}

.content .box-l .img{
  width: 230rpx;
  height:300rpx;
  box-shadow: 0 0 10px #000;
}

.box-r{
  margin-left:30rpx;
  padding-bottom:20rpx; 
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}

.content .box-r book-title{
  font-size:16px;
  color:#333
}

.box-r .book-desc{
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
  overflow:hidden;
  line-height: 1.5;
  color:rgb(94, 94, 94);
  font-size:14px;
}

.box-r .author{
  display:flex;
  justify-content:space-between;
  font-size:10px;
  align-items: center;
  color:#8d8c8c;
}
.box-r .author .author-r{
  display:flex;
  justify-content:space-between;
  align-items: center;
  width:300rpx;
}

.update{
  height:12px;
  line-height: 4px;
}

.loading{
  height:300rpx;
  width: 400rpx;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}

.loading-more {
  display:flex;
  justify-content:center;
  align-items: center;
  height: 160rpx;
}

.loading-more .loadmore-img{
  width:100rpx;
  height:100rpx;
}

.loading-more text{
  margin-left:20rpx;
}

.no-more{
  position:relative;
  display:flex;
  align-items:center;
  justify-content:center;
  text-align: center;
  height:60rpx;
  margin-top:40rpx;
  color:#888;
}

.no-more-text{
  position:relative;
  z-index:998;
  width:300rpx;
  background: #fff  
}

.line{
  position:absolute;
  z-index:996;  
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  width:600rpx;
  height:1rpx;
  background:#e9e9e9;
}

